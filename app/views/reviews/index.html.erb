<h1>Application Review Dashboard</h1>
<br>
<%= link_to 'Review a New Application', new_review_path, class: "btn btn-primary btn-large" %>
<br>
<br>
<p><%= @review_count %> reviewed applications</p>
<p><%= @unreviewed_count %> applications awaiting review</p>
<br>
<table class="table table-striped table-hover">
  <tr>
    <th>Applicant</th>
    <th>Education</th>
    <th>Open source</th>
    <th>Resume</th>
    <th>Fit</th>
    <th>Work experience</th>
    <th>Exceptional</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <td></td>
    <% @averages.each do |avg| %>
      <td><%= "%.2f" % avg.to_f %></td>
    <% end %>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.apn.profile.first_name %> <%= review.apn.profile.last_name %></td>
    <td><%= review.education %></td>
    <td><%= review.contribution %></td>
    <td><%= review.resume %></td>
    <td><%= review.fit %></td>
    <td><%= review.work_experience %></td>
    <td><%= review.exceptional %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

