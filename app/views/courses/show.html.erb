<div id='course'>
  <h2><%= @course.name %></h2>
  <%= link_to "Edit Class", [:edit, @course] %>
  |
  <%= link_to "Delete Class", [@course], :method => :delete, :confirm => "Are you sure you want to delete this course?" %>


  <dl class="dl-horizontal">
    <dt>Course Type</dt>
    <dd><%= @course.course_type %></dd>
    <dt>Class Description</dt>
    <dd><%= @course.description %></dd>
    <dt>Class Description URL</dt>
    <dd><%= @course.desc_url%></dd>
    <dt>Start Date</dt>
    <dd><%= @course.start_date%></dd>
    <dt>End Date</dt>
    <dd><%= @course.end_date%></dd>
    <dt>Cost</dt>
    <dd><%=@course.cost%></dd>
    <dt>Capacity</dt>
    <dd><%= @course.capacity %></dd>
  </dl>

</div>

