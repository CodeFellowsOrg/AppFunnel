<%
  r = 6
  c = 60
 %>
<%= semantic_form_for [@profile, @apn] do |f| %>

    <%= f.inputs :email, :first_name, :last_name, :phone_number, :city, :state, for: :profile%>
    <%= f.inputs :gender, :as => :radio, :collection => ["Male", "Female"], for: :profile %>
    <%= f.input :why, input_html: { rows: r, class: "input-xxlarge"  } %>
    <%= f.input :diligent, input_html: { rows: r, class: "input-xxlarge"  } %>
    <%= f.input :cssfloat, input_html: { rows: r, class: "input-xxlarge"  } %>
    <%= f.input :best, input_html: { rows: r, class: "input-xxlarge"  } %>
    <%= f.input :employment, input_html: { rows: r } %>
    <%= f.input :findout, input_html: { rows: r, class: "input-xxlarge"  } %>
    <%= f.input :gplus, input_html: { rows: r } %>
    <%= f.input :skype, input_html: { rows: r } %>
    <% if @apn.review.decision == "Request Video" %>
      <%= f.input :video, input_html: { rows: r } %>
      <%= f. input :code_sample, input_html: { rows: r } %>
    <% end %>


  <%= f.actions do %>
    <%= f.action :submit, label: "Update Application", button_html: { class: "btn btn-primary btn-large" }%>
  <% end %>
<% end %>
